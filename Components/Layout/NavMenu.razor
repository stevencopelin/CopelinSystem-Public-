<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CopelinSystem</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/projects">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Projects
            </NavLink>
        </div>

        <!-- Admin Section -->
        <AuthorizeView>
            <Authorized>
                @if (IsAdmin())
                {
                    <div class="nav-item px-3 mt-3">
                        <div class="nav-link text-muted" style="cursor: default;">
                            <strong>ADMIN</strong>
                        </div>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/clients">
                            <span class="bi bi-building" aria-hidden="true"></span> Client Management
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/consultants">
                            <span class="bi bi-person-badge" aria-hidden="true"></span> Consultant Management
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/contractors">
                            <span class="bi bi-tools" aria-hidden="true"></span> Contractor Management
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/employees">
                            <span class="bi bi-people" aria-hidden="true"></span> Employee Management
                        </NavLink>
                    </div>

                    <div class="nav-item px-3 nested">
                        <NavLink class="nav-link" href="users">
                            <span class="bi bi-shield-lock" aria-hidden="true"></span> AD Management
                        </NavLink>
                    </div>
                }
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    [CascadingParameter]
    private Task<AuthenticationState>? AuthState { get; set; }

    private bool IsAdmin()
    {
        if (AuthState == null) return false;
        
        var authState = AuthState.Result;
        var user = authState.User;
        
        if (user.Identity?.IsAuthenticated == true)
        {
            var roleClaim = user.FindFirst("Role");
            return roleClaim?.Value == "Admin";
        }
        
        return false;
    }
}
