@page "/contractors"
@using CopelinSystem.Models
@using CopelinSystem.Services
@inject ContractorService ContractorService
@inject AuthenticationStateProvider AuthStateProvider
@inject AuthenticationService AuthService
@inject PermissionService PermissionService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Contractor Management - Copelin Work Flow Management</PageTitle>

<AuthorizeView>
    <Authorized>
        @if (canManageContractors)
        {
            <div class="container-fluid mt-3">
                <!-- Header -->
                <div class="row mb-3">
                    <div class="col-md-12">
                        <h3><i class="fas fa-hard-hat"></i> Contractor Management</h3>
                        <p class="text-muted">Manage contractors and their contact information</p>
                    </div>
                </div>

                <!-- Action Bar -->
                <div class="row mb-3">
                    <div class="col-md-12 text-right">
                        <button class="btn btn-success" @onclick="OpenAddModal">
                            <i class="fas fa-plus"></i> Add Contractor
                        </button>
                    </div>
                </div>

                <!-- Contractors Table -->
                <div class="card">
                    <div class="card-body">
                        @if (contractors == null)
                        {
                            <p>Loading contractors...</p>
                        }
                        else if (!contractors.Any())
                        {
                            <p class="text-muted">No contractors found. Click "Add Contractor" to create one.</p>
                        }
                        else
                        {
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Business Name</th>
                                        <th>Contact Person</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Services</th>
                                        <th>Supplier #</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contractor in contractors)
                                    {
                                        <tr>
                                            <td><strong>@contractor.BusinessName</strong></td>
                                            <td>@(contractor.Contact ?? "-")</td>
                                            <td>@(contractor.Email ?? "-")</td>
                                            <td>@(contractor.Phone ?? "-")</td>
                                            <td>@(contractor.Services ?? "-")</td>
                                            <td>@(contractor.SupplierNumber ?? "-")</td>
                                            <td>
                                                @if (contractor.IsActive)
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-primary" @onclick="() => OpenEditModal(contractor)">
                                                    <i class="fas fa-edit"></i> Edit
                                                </button>
                                                @if (contractor.IsActive)
                                                {
                                                    <button class="btn btn-sm btn-warning" @onclick="() => DeactivateContractor(contractor.ContractorId)">
                                                        <i class="fas fa-ban"></i> Deactivate
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-success" @onclick="() => ActivateContractor(contractor.ContractorId)">
                                                        <i class="fas fa-check"></i> Activate
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>

                <!-- Add/Edit Modal -->
                @if (showModal)
                {
                    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">@(isEditing ? "Edit Contractor" : "Add Contractor")</h5>
                                    <button type="button" class="close" @onclick="CloseModal">
                                        <span>&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label><strong>Business Name *</strong></label>
                                        <input type="text" class="form-control" @bind="currentContractor.BusinessName" placeholder="e.g., XYZ Contracting Pty Ltd" />
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label><strong>Contact Person</strong></label>
                                                <input type="text" class="form-control" @bind="currentContractor.Contact" placeholder="e.g., Jane Doe" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label><strong>Supplier Number</strong></label>
                                                <input type="text" class="form-control" @bind="currentContractor.SupplierNumber" placeholder="e.g., SUP-12345" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label><strong>Email</strong></label>
                                                <input type="email" class="form-control" @bind="currentContractor.Email" placeholder="contact@example.com" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label><strong>Phone</strong></label>
                                                <input type="text" class="form-control" @bind="currentContractor.Phone" placeholder="0400 000 000" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label><strong>Address</strong></label>
                                        <textarea class="form-control" rows="2" @bind="currentContractor.Address" placeholder="Business address"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label><strong>Services</strong></label>
                                        <textarea class="form-control" rows="3" @bind="currentContractor.Services" placeholder="Description of services provided"></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                                    <button type="button" class="btn btn-primary" @onclick="SaveContractor">
                                        <i class="fas fa-save"></i> Save
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center mt-5">
                <h3>Access Denied</h3>
                <p>You do not have permission to access this page.</p>
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <div class="text-center mt-5">
            <h3>Please log in to access this page.</h3>
            <a href="/login" class="btn btn-primary">Go to Login</a>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private User? currentUser;
    private bool canManageContractors = false;
    private List<Contractor>? contractors;
    private bool showModal = false;
    private bool isEditing = false;
    private Contractor currentContractor = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var userIdClaim = user.FindFirst("UserId");
            if (userIdClaim != null && int.TryParse(userIdClaim.Value, out int userId))
            {
                currentUser = await AuthService.GetUserById(userId);
                if (currentUser != null)
                {
                    canManageContractors = await PermissionService.UserHasPermission(currentUser, "ManageContractors");
                }
            }
        }

        if (canManageContractors)
        {
            await LoadData();
        }
    }

    private async Task LoadData()
    {
        contractors = await ContractorService.GetAllContractors();
    }

    private void OpenAddModal()
    {
        currentContractor = new Contractor();
        isEditing = false;
        showModal = true;
    }

    private void OpenEditModal(Contractor contractor)
    {
        currentContractor = new Contractor
        {
            ContractorId = contractor.ContractorId,
            BusinessName = contractor.BusinessName,
            Contact = contractor.Contact,
            Email = contractor.Email,
            Phone = contractor.Phone,
            Address = contractor.Address,
            Services = contractor.Services,
            SupplierNumber = contractor.SupplierNumber,
            IsActive = contractor.IsActive
        };
        isEditing = true;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        currentContractor = new();
    }

    private async Task SaveContractor()
    {
        if (string.IsNullOrWhiteSpace(currentContractor.BusinessName))
        {
            await JSRuntime.InvokeVoidAsync("Notifications.showError", "Business name is required");
            return;
        }

        if (isEditing)
        {
            await ContractorService.UpdateContractor(currentContractor);
        }
        else
        {
            await ContractorService.AddContractor(currentContractor);
        }

        await LoadData();
        CloseModal();
    }

    private async Task DeactivateContractor(int contractorId)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("Notifications.showConfirm", "Deactivate this contractor? It will no longer appear in dropdowns.");
        if (confirmed)
        {
            await ContractorService.DeleteContractor(contractorId);
            await LoadData();
        }
    }

    private async Task ActivateContractor(int contractorId)
    {
        var contractor = contractors?.FirstOrDefault(c => c.ContractorId == contractorId);
        if (contractor != null)
        {
            contractor.IsActive = true;
            await ContractorService.UpdateContractor(contractor);
            await LoadData();
        }
    }
}
