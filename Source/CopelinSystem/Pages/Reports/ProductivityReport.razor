@page "/reports/productivity"
@using CopelinSystem.Services
@using CopelinSystem.Models
@inject ReportingService ReportingService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject AuthenticationService AuthService
@inject PermissionService PermissionService

<AuthorizeView>
    <Authorized>
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Productivity Report</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item"><a href="/reports">Reports</a></li>
                            <li class="breadcrumb-item active">Productivity</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">
            <div class="container-fluid">
                @if (isLoading)
                {
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>
                }
                else if (!isAuthorized)
                {
                     <div class="text-center mt-5">
                        <h3>Access Denied</h3>
                        <p>You do not have the required permissions ('View Reports') to view this report.</p>
                    </div>
                }
                else
                {
                    <div class="row">
                        <!-- Top Users Leaderboard -->
                        <div class="col-md-6">
                            <div class="card card-outline card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Top 10 Active Users (Hours Logged)</h3>
                                </div>
                                <div class="card-body p-0">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">#</th>
                                                <th>User</th>
                                                <th>Total Hours</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < topUsers.Count; i++)
                                            {
                                                var u = topUsers[i];
                                                <tr>
                                                    <td>@(i + 1).</td>
                                                    <td>@u.UserName</td>
                                                    <td>
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar bg-primary" style="width: @(maxUserHours > 0 ? (u.TotalHours / maxUserHours * 100) : 0)%"></div>
                                                        </div>
                                                        <small>@u.TotalHours.ToString("N1") hrs</small>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Most Costly Projects (Time) -->
                        <div class="col-md-6">
                            <div class="card card-outline card-warning">
                                <div class="card-header">
                                    <h3 class="card-title">Top 10 Projects Consuming Most Time</h3>
                                </div>
                                <div class="card-body p-0">
                                    <table class="table table-striped">
                                        <thead>
                                        <tr>
                                            <th>Project Location</th>
                                            <th>Project</th>
                                            <th class="text-end">Hours</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in topProjects)
                                        {
                                            <tr>
                                                <td>@item.ProjectLocation</td>
                                                <td>@item.ProjectName</td>
                                                <td class="text-end">@item.TotalHours.ToString("N1")</td>
                                            </tr>
                                        }
                                    </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </Authorized>
    <NotAuthorized>
         <div class="text-center mt-5">
            <h3>Access Denied</h3>
            <p>You do not have permission to view reports.</p>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private bool isLoading = true;
    private bool isAuthorized = false;
    
    // Data
    private List<(string UserName, float TotalHours)> topUsers = new();
    private List<(string ProjectName, string ProjectLocation, float TotalHours)> topProjects = new();
    private float maxUserHours = 0;
    private string? regionFilter = null;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var appUser = await AuthService.GetUserFromPrincipal(user); 

        if (appUser != null)
        {
             isAuthorized = await PermissionService.UserHasPermission(appUser, "ViewReports");
             if (isAuthorized)
             {
                 if (appUser.Role != UserRole.Admin)
                 {
                     regionFilter = appUser.Region;
                 }
                 await LoadData();
             }
             else 
             {
                 isLoading = false;
             }
        }
        else
        {
            isLoading = false;
        }
    }

    private async Task LoadData()
    {
        try {
            // 1. Users
            topUsers = await ReportingService.GetTopProductiveUsers(10, regionFilter);
            if (topUsers.Any()) maxUserHours = topUsers.Max(x => x.TotalHours);

            // 2. Projects
            topProjects = await ReportingService.GetProjectHours(10, regionFilter);
        } 
        finally 
        {
            isLoading = false;
        }
    }
}
